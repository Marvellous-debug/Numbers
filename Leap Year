
def isLeapYear(year):
    if year % 4 == 0: 
        if year % 100 == 0: 
            if year % 400 == 0: 
                return True 
            else: 
                return False 
        else: 
            return True 
    else: 
        return False 

while True: 
    there = int(input("enter a year (or 0 to quit): "))

    if there == 0: 
        break 

    print (isLeapYear(there))
